in vec3 position;
in vec2 texcoord;
in vec4 color;

uniform highp mat4 projMatrix;
uniform highp mat4 extraMatrix;
uniform highp mat4 mvpMatrix;
uniform bool textured;

out vec2 Texcoord;
out vec4 Color;

void main()
{
	vec4 pos = vec4(position, 1.0);
	pos = mvpMatrix *
	      extraMatrix *
	      pos;

	gl_Position = projMatrix * pos;

	Color = color;
	if (textured) {
		Texcoord = texcoord;
	} else {
		Texcoord = vec2(0.0, 0.0);
	}
}
